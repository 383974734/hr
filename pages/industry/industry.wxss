/* pages/industry/industry.wxss */



.navbar-v {
  position: fixed;
  width: 100%;
  z-index: 999;
  background-color: white;
  top: 0;
}

.navbar {
  width: 100%;
  height: 46px;
  position: absolute;
	bottom: 0;
}



/* <!-- 展示选择标签view --> */
.header-v {
  /* margin: 0rpx 40rpx 10rpx 40rpx; */
  padding: 0rpx 40rpx 20rpx 40rpx;
  background-color: white;
  overflow: hidden;
}
/* <!-- 已选行业 --> */
.header-tit {
  height: 60rpx;
  line-height: 60rpx;
  margin-right: 30rpx;
  font-size: 43rpx;
  display: inline-block;
}
/* <!-- 已选择个数 --> */
.header-number {
  height: 50rpx;
  line-height: 50rpx;
  font-size: 28rpx;
  color: #a19999;
  display: inline-block;
}
/* <!-- 你还未选择任何行业标签提示 --> */
.header-tips {
  height: 60rpx;
  line-height: 60rpx;
  font-size: 28rpx;
  margin-top: 20rpx;
  color: #a19999;
}
/* <!-- 已经选择标签view --> */
.header-sele-v {
  background-color: yellow;
  margin-bottom: 10rpx;
}



/* <!-- 所有标签view --> */
.tit-b-v {
  /* height: 1500rpx; */
  padding: 40rpx 40rpx 220rpx 40rpx;
  background-color: #f9f9f9;
}

/* <!-- 标签view --> */
.tit-v {
  padding-bottom: 40rpx;
  overflow: hidden;
}
/* <!-- 分类标题 --> */
.tit-name {
  height: 50rpx;
  line-height: 50rpx;
  font-size: 28rpx;
  color: #a19999;
}

/* tit */
.tit {
  height: 50rpx;
  line-height: 50rpx;
  font-size: 28rpx;
  min-width: 130rpx;
  color: #837e7e;
  border: 1rpx solid #d3cfcf;
  border-radius: 5rpx;
  float: left;
  text-align: center;
  margin: 10rpx 15rpx 7rpx 0rpx;
  padding-left: 10rpx;
  padding-right: 10rpx;
  background-color: white;
}

.tit-back-colo {
  background-color: rgba(204, 4, 4, 0.425);
  color: white;
  border: 1rpx solid rgba(204, 4, 4, 0.178);
}