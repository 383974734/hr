/* pages/record/record.wxss */


.navbar-v {
  position: fixed;
  width: 100%;
  z-index: 999;
  background-color: white;
  top: 0;
}

.navbar {
  width: 100%;
  height: 46px;
  position: absolute;
	bottom: 0;
}


.back-v {
  border-top: 15rpx solid #f9f9f9;
}

.list-v {
  margin: 30rpx 30rpx;
}

.cell-v {
  margin-bottom: 30rpx;
}

.header-v {
  width: 100%;
  height: 50rpx;
  margin-bottom: 10rpx;
  overflow: hidden;
}

/* <!-- 状态图片 --> */
.state-img {
  width: 50rpx;
  height: 50rpx;
  float: left;
}
/* <!-- 状态 --> */
.state-name {
  margin-left: 20rpx;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 28rpx;
  color: #c2bbbb;
  float: left;
}
/* <!-- 时间 --> */
.time {
  height: 50rpx;
  line-height: 50rpx;
  float: right;
  font-size: 28rpx;
  color: #c2bbbb;
}

/* <!-- 金额/数量 --> */
.number {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 50rpx;
  color: #067226be;
  text-align: center;
}

.img {
  width: 340rpx;
  height: 80rpx;

    /* 居中显示 */
  margin: 0 auto;
  display: flex;
  justify-content: center;
}
