/* pages/train/train.wxss */

page {
  background-color: #f9f9f9;
}


.navbar-v {
  position: fixed;
  width: 100%;
  z-index: 999;
  background-color: white;
  top: 0;
}

.navbar {
  width: 100%;
  height: 46px;
  position: absolute;
	bottom: 0;
}



/* <!-- 搜索view --> */
.search-v {
  height: 110rpx;
  background-color: white;
  overflow: hidden;
  margin-bottom: 20rpx;
}

/* 搜索框 */
.search {
  width: 630rpx;
  height: 70rpx;
  font-size: 30rpx;
  line-height: 70rpx;
  border-radius: 35rpx;
  margin-top: 20rpx;
  margin-left: 50rpx;
  background-color: #f7f7f7;
  padding-left: 20rpx;
}

/* 标签列表 */
.titlist {
  margin: 0rpx 50rpx 0rpx 50rpx;
}

/* 标签文字 */
.title {
  min-width: 80rpx;
  /* width: 110rpx; */
  text-align: center;
  font-size: 28rpx;
  color: #67b5e9;
  border: 1rpx solid #67b5e9;
  border-radius: 5rpx;
  display: inline-block;
  padding: 0rpx 5rpx;
  margin-right: 20rpx;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  background-color: #e7eff5;
}



/* 列表 */
.list-b {
  background-color: white;
  padding-bottom: 20rpx;
}

.list-v {
  height: 180rpx;
  margin: 0rpx 30rpx 15rpx 30rpx;
}

.list-img {
  width: 180rpx;
  height: 180rpx;
  border-radius: 10rpx;
  vertical-align: top;
  display: inline-block;
  margin-right: 20rpx;
  float: left;
}

.list-r-v {
  width: 470rpx;
  display: inline-block;
  float: right;
}

.list-tit {
  font-size: 28rpx;
  font-weight: bold;
    /* 隐藏超出部分 */
  overflow:hidden;
  /* 显示省略号 */
  text-overflow: ellipsis;
  display:-webkit-box;
  /* 块元素显示的文本行数 */
  -webkit-line-clamp:2;
  -webkit-box-orient:vertical;
}

.list-name {
  font-size: 26rpx;
  color: #bbb6b6;
  display: inline-block;
  margin-right: 50rpx;
  margin-top: 60rpx;
}

.list-member {
  font-size: 26rpx;
  color: #dc001c;
  display: inline-block;
  border: 1rpx solid #dc001c;
  border-radius: 5rpx;
  padding-left: 10rpx;
  padding-right: 10rpx;
}