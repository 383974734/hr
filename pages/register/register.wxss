.navbar-v {
  position: fixed;
  width: 100%;
  z-index: 999;
  background-color: white;
  top: 0;
}

.navbar {
  width: 100%;
  height: 46px;
  position: absolute;
	bottom: 0;
}



/* title */
.nav-tit {
  /* height: 180rpx;
  line-height: 180rpx; */
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  color: #fff;
  background-color: #dc001c; 
}

/* 整体表格背影布局 */
.back-v {
  margin-left: 40rpx;
  margin-right: 40rpx;
  padding-bottom: 50rpx;
}

/* 带红色小星号的文字 */
.tagview {
  width: 100%;
  height: 80rpx;
  float: left;
}

/* 输入文本框 */
.textview {
  width: 100%;
  float: left;
}

/* 红色的提示信息 */
.tips {
  color: #dc001c;
  font-size: 25rpx;
  float: left;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
}

/* 性别 */
.sele-sex {
  width: 53rpx;
  height: 53rpx;
  vertical-align: top;
  background-color: red;
}

/* 输入框 */
.textarea-v {
  border: 1rpx solid #ececec;
  width: 100%;
  height: 300rpx;
  float: left;
  box-sizing: border-box;
}

.textarea-v-b {
  margin-bottom: 100rpx;
}

/* 提交按钮 */
.submission {
  font-size: 34rpx;
  margin-left: 50rpx;
  margin-right: 50rpx;
  margin-bottom: 50rpx;
  background-color: rgb(250, 76, 82);
  color: white;
}






.radio-box{
  display: inline-block;
  position: relative;
  height: 30px;
  line-height: 30px;
  margin-right: 5px;
  font-size: 30rpx;
}
.input-radio {
  display: inline-block;
  position: absolute;
  opacity: 0;
  width: 15px;
  height: 15px;
  cursor: pointer;
  left: 0px;
  outline: none;
  -webkit-appearance: none;
}

.radio {
  display: inline-block;
  width: 15px;
  height: 15px;
  border-radius: 50%;
  vertical-align: middle;
  cursor: pointer;
  background: #D7D7D9;
  
}

.on{
    background: #dc001c;
}

